# Environment Configuration for Content Automation Pipeline
# Copy this file to .env and fill in your actual values

# ============================================================================
# API Credentials
# ============================================================================

# OpenAI API Key (required for content generation and classification)
OPENAI_API_KEY=your-openai-api-key-here

# Notion Integration Token (required for database access)
NOTION_TOKEN=your-notion-token-here

# ============================================================================
# Model Configuration
# ============================================================================

# Model for triage/classification (used by classify_and_route.py)
OPENAI_MODEL_TRIAGE=gpt-4o-mini

# Model for high-priority classification escalation
OPENAI_MODEL_HIGH=gpt-4o

# Model for content draft generation (NEW - for generate_content_draft.py)
OPENAI_MODEL_CONTENT=gpt-4o

# Model for daily synthesis
MODEL_SYNTHESIS=gpt-4o-mini

# ============================================================================
# Content Generation Settings (NEW)
# ============================================================================

# Enable/disable content generation (true/false)
CONTENT_GENERATION_ENABLED=true

# Maximum number of drafts to generate per run (rate limiting)
MAX_DRAFTS_PER_RUN=5

# ============================================================================
# Daily Synthesis Settings
# ============================================================================

# Time window for synthesis in hours
SYNTH_WINDOW_HOURS=24

# Maximum mentions to process in a single synthesis run
SYNTH_MAX_MENTIONS=60

# Maximum number of content topics to generate per run
SYNTH_TOPICS_MAX=3
