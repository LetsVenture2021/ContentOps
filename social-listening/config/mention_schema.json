{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "platform",
    "url",
    "text",
    "author",
    "created_at"
  ],
  "properties": {
    "platform": {
      "type": "string",
      "enum": [
        "BiggerPockets",
        "LinkedIn",
        "Facebook",
        "Instagram",
        "X",
        "Reddit",
        "YouTube",
        "Other"
      ]
    },
    "url": {
      "type": "string",
      "minLength": 8
    },
    "text": {
      "type": "string",
      "minLength": 1
    },
    "author": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "minLength": 10
    },
    "source_query": {
      "type": "string"
    }
  }
}